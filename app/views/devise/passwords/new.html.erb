<div class="devise-form-parent-wrapper devise-100vh">
  <h2 class="devise-title">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "devise-form"}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions">
      <%= f.submit "Send reset password email", class: "devise-submit" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>